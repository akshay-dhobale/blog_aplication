
<div class="container" >
 	
  <% @article.each do |article| %>

    <div class="col-sm-3">
    	
      <div class=" pull-center article_block panel panel-default">
        <div class="panel-heading" style="background-color: dodgergreen">
          <h3 style="color: red;">
            <center><%= article.title %></center>
          </h3>
        </div>
        <p class="panel-body" data-spy="scroll" data-target=".navbar" data-offset="50">
          <%= article.content %> 
        </p> 
      </div>
      <div class="container">
        <button type="button" class="btn btn-info">
          <span class="glyphicon glyphicon-eye-open"></span>
          <%= link_to 'Show', article_path(article), :class=>"btn-txt" %> 
        </button> 
         
        <button type="button" class="btn btn-success">
          <span class="glyphicon glyphicon-pencil"></span>
          <%= link_to 'Edit', edit_article_path(article),data: {confirm: 'Are you sure?'},  :class=>"btn-txt"  %>
        </button> 
        <button type="button" class="btn btn-danger">
          <span class="glyphicon glyphicon-remove-sign"></span>
          <%= link_to 'Delete', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' }, :class=>"btn-txt"  %>
        </button>
      </div>
    </div>
 	<% end %>
</div>


